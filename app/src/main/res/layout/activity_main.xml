<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/greetings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greetings_background"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="0dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        >

        <TextView
            android:id="@+id/sun_or_moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/greeting"
            android:text="@string/morning"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#003472"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/hola"
            android:text="@string/hola"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#004b91"
            android:layout_marginTop="16dp"
            android:layout_below="@id/greeting"
            />

        <TextView
            android:id="@+id/lets_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hola"
            android:text="@string/lets_go"
            android:textStyle="bold"
            android:textColor="#004b91"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listeningCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetings"
        android:background="@drawable/subject_element_background"
        android:elevation="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:paddingStart="8dp"
        android:paddingBottom="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="8dp"
        >

        <ImageView
            android:id="@+id/listen_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_listening_icon"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/listen_icon"
            android:fontFamily="serif-monospace"
            android:gravity="end"
            android:text="@string/listening"
            android:textColor="#003472"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ReadingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listeningCard"
        android:layout_alignParentEnd="true"
        android:background="@drawable/subject_element_background"
        android:elevation="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="24dp"
        android:paddingBottom="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        >

        <ImageView
            android:id="@+id/read_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_reading_icon"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="end"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="@string/reading"
            android:textColor="#003472"
            android:layout_toEndOf="@id/read_icon"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/WritingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ReadingCard"
        android:layout_alignParentStart="true"
        android:background="@drawable/subject_element_background"
        android:elevation="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:paddingStart="24dp"
        android:paddingBottom="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        >

        <ImageView
            android:id="@+id/write_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_writing_icon"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="end"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="@string/writing"
            android:textColor="#003472"
            android:layout_toEndOf="@id/write_icon"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ProgressCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="@drawable/subject_element_background"
        android:elevation="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="24dp"
        android:paddingBottom="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        >

        <ImageView
            android:id="@+id/progressIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_progress_icon"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/progress"
            android:textColor="#003472"
            android:layout_toEndOf="@id/progressIcon"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            />

    </RelativeLayout>

</RelativeLayout>